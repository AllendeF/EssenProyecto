<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:gravity="center_horizontal">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/essen_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                />

            <ImageButton
                android:id="@+id/Botton1"
                android:layout_width="107dp"
                android:layout_height="80dp"
                android:contextClickable="true"
                android:layout_below="@+id/imageview"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/ic_burger"
                android:layout_marginTop="30dp"
                android:background="#F16A0F"
                />

            <ImageButton
                android:id="@+id/Botton2"
                android:layout_width="107dp"
                android:layout_height="80dp"
                android:contextClickable="true"
                android:layout_below="@+id/imageview"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_otros"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:background="#DC031C"
                />

            <ImageButton
                android:id="@+id/Botton3"
                android:layout_width="107dp"
                android:layout_height="80dp"
                android:layout_below="@+id/imageview"
                android:layout_marginTop="29dp"
                app:srcCompat="@drawable/ic_pizza"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:background="#EDBC07"
                />

             />


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>