<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:fillViewport="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:id="@+id/Realtivelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/logo_local"
            android:layout_width="387dp"
            android:layout_height="181dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/mcdonalds" />

        <TextView
            android:id="@+id/nombre_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_local"
            tools:text="McDonald´s"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
             />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="622dp"
            android:layout_height="35dp"
            android:layout_below="@id/nombre_local"
            android:src="@drawable/btng2"
            android:layout_marginTop="6dp"
            tools:layout_editor_absoluteX="-31dp"
            tools:layout_editor_absoluteY="170dp" />

        <TextView
            android:id="@+id/nombre_sucursal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombre_local"
            android:textStyle="bold"
            android:textColor="@color/black"
            tools:text="Superseis"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/Informacion1"
            android:layout_width="175dp"
            android:layout_height="36dp"
            android:layout_below="@id/imageView2"
            android:layout_marginTop="10dp"
            android:backgroundTint="#F2915A"
            android:text="Información"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textSize="15dp"
             />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Informacion1"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="MENÚ"
            android:textSize="15dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/foto_menuitem1"
            android:layout_width="128dp"
            android:layout_height="93dp"
            android:layout_below="@id/textView7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/mcdonalds" />

        <TextView
            android:id="@+id/menuitem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            tools:text="McChicken"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/precio_menuitem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuitem1"
            tools:text="25.000 gs"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"

            />

        <ImageView
            android:id="@+id/foto_menuitem2"
            android:layout_width="128dp"
            android:layout_height="93dp"
            android:layout_below="@id/foto_menuitem1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:scaleType="fitCenter"
            tools:srcCompat="@drawable/mcdonalds" />

        <TextView
            android:id="@+id/menuitem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/precio_menuitem1"
            tools:text="Combo Doble Bacon"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:textSize="15dp"

            />

        <TextView
            android:id="@+id/precio_menuitem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menuitem2"
            tools:text="32.000 gs"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"

            />


        <TextView
            android:id="@+id/comentarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMENTARIOS"
            android:layout_below="@id/foto_menuitem2"
            android:gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="15dp"

            />
        <Button
            android:id="@+id/calificacion"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:text="Calificar este local"
            android:layout_below="@id/comentarios"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btng"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calificacion"

            android:layout_marginTop="10dp" />


    </RelativeLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>